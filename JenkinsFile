pipeline {
   agent any
   
   parameters
   {
      choice(name:'VERSION', choices: "${VERSION}",,description:"Type of action to perform")
	  choice(name:'COMPONENT_NAME', choices: ['PL','SL','CTPL','CTSL'], description:'')
   }
   try{
   stages {
      stage("build"){
	    steps{
		   echo 'Building'
		   build 'test1'
		}
	  }
	  
	  stage("Test"){
	     steps{
		   echo 'Testing ..'
		 }
	  }
	  
	  stage("Deploy"){
	     steps{
		 
		   echo 'Deploying...'
		 }
	  
	  }
	  
   }
}
catchError(stageResult: 'ABORTED') {
    echo "some one abortedthe build"
}

}